{
  "name": "consume-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\"",
    "test:coverage": "pnpm run test --coverage --reporters=\"default\"",
    "test:watch": "pnpm run test --watch",
    "test:watch:coverage": "pnpm run test --watch",
    "test:ci": "pnpm run test --ci --watchAll=false --coverage --reporters=\"default\"",
    "eject": "react-scripts eject",
    "lint": "eslint",
    "prettier": "prettier",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "ignorePatterns": [
      ".prettierrc*"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "src/__tests__/**/*"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": 0
        }
      }
    ],
    "rules": {
      "semi": 0,
      "comma-dangle": 0,
      "no-console": "warn",
      "prettier/prettier": [
        "warn",
        {
          "endOfLine": "auto"
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm run lint --fix --max-warnings=0",
      "pnpm run prettier --write"
    ]
  },
  "jest": {
    "resetMocks": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/index*.{js,jsx,ts,tsx}",
      "!src/reportWebVitals.ts",
      "!src/__tests__/testUtils/*"
    ],
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).ts?(x)"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.3",
    "@mui/x-data-grid": "^5.17.17",
    "@reduxjs/toolkit": "^1.9.1",
    "axios": "^1.2.2",
    "history": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.6.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0",
    "web-vitals": "^3.1.0"
  },
  "devDependencies": {
    "@emotion/jest": "^11.10.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "snapshot-diff": "^0.10.0"
  }
}
